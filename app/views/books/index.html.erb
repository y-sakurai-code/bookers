<!DOCTYPE HTML>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>Bookers</title>
    <link rel="stylesheet" href="/app/assets/stylesheets/books.scss" />
  </head>

  <body>
    <h1>Books</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
            <th><%= link_to "Show", book_path(book.id) %></th>
            <th><%= link_to "Edit", edit_book_path(book.id) %></th>
            <th><a half="">Destroy</a></th>
          </tr>
          <% end %>
        </thead>
      </table>

      <br>

    <h3>New book</h3>

      <%= form_with model: @book do |f| %>
        <h6>Title</h6>
          <%= f.text_field :title %>
	
        <h6>Body</h6>
          <%= f.text_area :body %>

          <%= f.submit 'Create Book' %>

      <% end %>

  </body>
</html>
